  padding: 0 0 20px 20px;
}

.md-content > div ul li {
  padding: 5px 0;
  font-family: Lato;
  font-size: 16px;
  font-weight: 300;
}

.md-content button {
  display: block;
  margin: 0 auto;
  font-size: 0.8em;
}

.inner-modal {
  padding: 0 !important;
}

.modal-left {

  .modal-image {
